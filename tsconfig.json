{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",    
    "moduleResolution": "node",                
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "./server",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true, // typeorm
    "experimentalDecorators": true, // typeorm
    "strictPropertyInitialization": false, // typeorm
  }
}